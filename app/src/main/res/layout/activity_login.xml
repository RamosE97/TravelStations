<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    tools:context=".Sign.Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:layout_width="193dp"
            android:layout_height="193dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/bus256" />
        <TextView
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:text="¿Adónde iremos hoy?"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_gravity="center"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_per"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/txtUsuario"
            android:hint="Ingresar nombre de usuario "/>
        <EditText
            android:layout_gravity="center"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_loc"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:layout_marginRight="35dp"
            android:inputType="textPassword"
            android:layout_marginLeft="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtClave"
            android:hint="Ingresar contraseña "/>

        <Button
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:id="@+id/btnIngresar"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="Iniciar sesión" />

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:id="@+id/lblNotAccount"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="¿Aún no tienes una cuenta?"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/lblRegistro"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="Registrarse" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:id="@+id/lblPassWord"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="Olvide mi contraseña"
            android:layout_width="wrap_content" />
    </LinearLayout>


</LinearLayout>